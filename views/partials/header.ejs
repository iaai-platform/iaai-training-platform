<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>International Aesthetic Academic Institution (IAAI)</title>
    <link rel="stylesheet" href="/css/header.css"> <!-- Link to the main CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"> <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  
  <!-- ✅ Header Section -->
  <header>
    <div class="logo">
        <img src="/images/image0.jpeg" alt="IAAI Logo">
    </div>
  
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/about">About us</a>
  
        <!-- ✅ "All Programs" with Arrow Icon & Menu Bar -->
        <div class="program-menu-trigger">
            <a href="/training-programs">All Programs</a>
            <i class="fas fa-chevron-down"></i> <!-- Arrow Icon -->
        </div>
  
        <div class="program-menu">
            <a href="/in-person-aesthetic-training">In-Person Aesthetic Training</a>
            <a href="/online-live-training">Online Live Training</a>
            <a href="/self-paced-online-training">Self-Paced Online Training</a>
            <a href="/on-demand-courses">On-Demand Courses</a>
            <a href="/in-company-courses">In-Company Courses</a>
            <a href="/mentorship-program">Mentorship Program</a>
            <a href="/advanced-aesthetic-techniques">Advanced Aesthetic Techniques</a>
            <a href="/corporate-aesthetic-training">Corporate Aesthetic Training</a>
        </div>
  
        <!-- ✅ "My Library" - Updated with correct routes -->
        <% if (user) { %>
          <div class="program-menu-trigger">
            <a href="/library">My Library</a>
            <i class="fas fa-chevron-down"></i> <!-- Arrow Icon -->
          </div>
  
          <div class="program-menu">
            <a href="/library/self-paced">
              <i class="fas fa-play-circle"></i> Self-Paced Courses
            </a>
            <a href="/library/live">
              <i class="fas fa-video"></i> Live Online Courses
            </a>
            <a href="/library/in-person">
              <i class="fas fa-users"></i> In-Person Courses
            </a>
          </div>
        <% } %>
  
        <a href="/NewsDetails">News</a>
        <a href="/contact-us">Contact us</a>
    </nav>
  
    <!-- ✅ Search Bar -->
    <div class="search-bar">
        <input type="text" placeholder="Search...">
    </div>
  
    <!-- ✅ Profile Dropdown -->
    <div class="login-register">
        <% if (user) { %>
            <div class="profile-dropdown">
                <button class="profile-icon">
                    <i class="fas fa-user-circle"></i> <!-- ✅ Human Head Icon -->
                </button>
                <div class="dropdown-content">
                    <a href="/dashboard">My Account</a>
                    <a href="/wishlist">Wishlist</a>
                    <a href="/orders">Your Orders</a>
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        <% } else { %>
            <button onclick="location.href='/login'">Login/Register</button>
        <% } %>
    </div>
  </header>