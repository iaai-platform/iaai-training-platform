                                    <option value="1 week">1 week</option>
                                </select>
                            </div>
                        </div>
                    </div>
            
                    <!-- CERTIFICATION SECTION -->
                    <div style="margin-bottom: 2rem; padding: 1.5rem; background: #f0f9ff; border-radius: 8px;">
                        <h4 style="margin-bottom: 1rem; color: #1f2937;">🏆 Certification Settings</h4>
                        
                        <div class="form-group">
                            <label class="switch-group">
                                <span>Enable Certificate</span>
                                <label class="switch">
                                    <input type="checkbox" id="certificateEnabled" name="certificateEnabled" checked>
                                    <span class="slider"></span>
                                </label>
                            </label>
                        </div>
                        
                        <div id="certificationOptions" style="margin-top: 1rem;">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label>Minimum Score (%)</label>
                                    <input type="number" class="form-control" id="minimumScore" name="minimumScore" 
                                           placeholder="70" min="0" max="100" value="70">
                                </div>
                                
                                <div class="form-group">
                                    <label>Issuing Authority</label>
                                    <input type="text" class="form-control" id="issuingAuthority" name="issuingAuthority" 
                                           placeholder="IAAI Training Institute" value="IAAI Training Institute">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="switch-group">
                                    <span>Require All Videos Completion</span>
                                    <label class="switch">
                                        <input type="checkbox" id="requireAllVideos" name="requireAllVideos" checked>
                                        <span class="slider"></span>
                                    </label>
                                </label>
                            </div>
                        </div>
                    </div>
            
                    <!-- METADATA SECTION -->
                    <div style="margin-bottom: 2rem; padding: 1.5rem; background: #f9fafb; border-radius: 8px;">
                        <h4 style="margin-bottom: 1rem; color: #1f2937;">🏷️ Metadata & Tags</h4>
                        
                        <div class="form-group">
                            <label>Tags</label>
                            <input type="text" class="form-control" id="tags" name="tags" 
                                   placeholder="e.g., jawline, contouring, cannula, dermal fillers">
                            <div class="form-hint">Separate tags with commas (used for search and filtering)</div>
                        </div>
                        
                        <div class="form-group">
                            <label>Internal Notes</label>
                            <textarea class="form-control" id="internalNotes" name="internalNotes" 
                                      placeholder="Internal admin notes (not visible to students)..." rows="3"></textarea>
                        </div>
                    </div>
                    
                    <!-- SUBMIT BUTTONS -->
                    <div style="text-align: right; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
                        <button type="button" class="btn btn-secondary" onclick="closeCourseModal()">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="saveCourseBtn">
                            <span id="saveCourseText">Create Course</span>
                            <span id="saveCourseLoader" class="loading" style="display: none;"></span>
                        </button>
                    </div>
