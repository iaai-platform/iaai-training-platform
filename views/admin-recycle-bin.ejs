<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recycle Bin - IAAI Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Recycle Bin Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }

        /* Admin Header */
        .admin-header {
            background: linear-gradient(135deg, #ffc107, #ff9800);
            color: white;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(255,193,7,0.2);
        }

        .admin-header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .admin-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

        .breadcrumb {
            background: rgba(255,255,255,0.1);
            padding: 10px 15px;
            border-radius: 25px;
            font-size: 0.9rem;
        }

        .breadcrumb a {
            color: white;
            text-decoration: none;
            opacity: 0.8;
        }

        .breadcrumb a:hover {
            opacity: 1;
            text-decoration: underline;
        }

        /* Container */
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Alert Box */
        .alert-box {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            color: #856404;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .alert-box i {
            font-size: 1.5rem;
        }

        /* Action Bar */
        .action-bar {
            background: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #545b62;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background: #c82333;
        }

        /* Table Container */
        .table-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .table-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
        }

        .table-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }

        /* Deleted Users Table */
        .deleted-users-table {
            width: 100%;
            border-collapse: collapse;
        }

        .deleted-users-table th {
            background: #f8f9fa;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e9ecef;
        }

        .deleted-users-table td {
            padding: 15px;
            border-bottom: 1px solid #f8f9fa;
            vertical-align: top;
        }

        .deleted-users-table tr:hover {
            background: #fff8f0;
        }

        /* User Info */
        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #6c757d;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Deletion Info */
        .deletion-info {
            font-size: 0.85rem;
            color: #666;
        }

        .deletion-reason {
            padding: 8px 12px;
            background: #f8f9fa;
            border-radius: 6px;
            font-size: 0.85rem;
            margin-top: 5px;
            font-style: italic;
        }

        /* Time Remaining */
        .time-remaining {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
        }

        .days-left {
            font-size: 1.5rem;
            font-weight: 700;
            color: #dc3545;
        }

        .days-label {
            font-size: 0.75rem;
            color: #666;
            text-transform: uppercase;
        }

        /* Action Buttons */
        .action-btns {
            display: flex;
            gap: 8px;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .admin-header-content {
                flex-direction: column;
                text-align: center;
            }

            .action-bar {
                flex-direction: column;
            }

            .deleted-users-table {
                font-size: 12px;
            }

            .deleted-users-table th,
            .deleted-users-table td {
                padding: 10px 8px;
            }

            .action-btns {
                flex-direction: column;
                width: 100%;
            }

            .btn-sm {
                width: 100%;
            }
        }
    </style>
</head>

<%- include('partials/header') %>

<body>
    <!-- Admin Header -->
    <div class="admin-header">
        <div class="admin-header-content">
            <div>
                <h1><i class="fas fa-trash-restore"></i> Recycle Bin</h1>
                <p>Recover or permanently delete users</p>
            </div>
            <div class="breadcrumb">
                <a href="/">Home</a> > 
                <a href="/dashboard">Dashboard</a> > 
                <a href="/admin-users">Users</a> > 
                <span>Recycle Bin</span>
            </div>
        </div>
    </div>

    <div class="admin-container">
        <!-- Alert Box -->
        <div class="alert-box">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong>Auto-Delete Warning:</strong> Deleted users will be permanently removed after 30 days. 
                You can recover them before the expiration date or permanently delete them immediately.
            </div>
        </div>

        <!-- Action Bar -->
        <div class="action-bar">
            <a href="/admin-users" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Users
            </a>
            <button class="btn btn-danger" onclick="emptyRecycleBin()">
                <i class="fas fa-trash"></i> Empty Recycle Bin
            </button>
        </div>

        <!-- Deleted Users Table -->
        <div class="table-container">
            <div class="table-header">
                <div class="table-title">
                    <i class="fas fa-trash"></i> Deleted Users (<%= deletedUsers.length %>)
                </div>
            </div>

            <% if (deletedUsers.length > 0) { %>
                <table class="deleted-users-table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Deletion Info</th>
                            <th>Time Remaining</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% deletedUsers.forEach(deletedUser => { 
                            const userData = deletedUser.userData;
                            const daysRemaining = Math.ceil((new Date(deletedUser.expiresAt) - new Date()) / (1000 * 60 * 60 * 24));
                        %>
                            <tr>
                                <!-- User Info -->
                                <td>
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            <%= userData.firstName.charAt(0) %><%= userData.lastName.charAt(0) %>
                                        </div>
                                        <div>
                                            <strong><%= userData.firstName %> <%= userData.lastName %></strong>
                                            <br>
                                            <small><%= userData.email %></small>
                                            <br>
                                            <small class="text-muted">Role: <%= userData.role %></small>
                                        </div>
                                    </div>
                                </td>

                                <!-- Deletion Info -->
                                <td>
                                    <div class="deletion-info">
                                        <strong>Deleted by:</strong> <%= deletedUser.deletedBy.name %><br>
                                        <strong>Date:</strong> <%= new Date(deletedUser.deletedAt).toLocaleString() %>
                                        <% if (deletedUser.deletionReason && deletedUser.deletionReason !== 'No reason provided') { %>
                                            <div class="deletion-reason">
                                                <i class="fas fa-comment"></i> <%= deletedUser.deletionReason %>
                                            </div>
                                        <% } %>
                                    </div>
                                </td>

                                <!-- Time Remaining -->
                                <td>
                                    <div class="time-remaining">
                                        <span class="days-left"><%= daysRemaining %></span>
                                        <span class="days-label">Days Left</span>
                                    </div>
                                </td>

                                <!-- Actions -->
                                <td>
                                    <div class="action-btns">
                                        <button class="btn btn-success btn-sm" onclick="recoverUser('<%= deletedUser._id %>', '<%= userData.firstName %> <%= userData.lastName %>')">
                                            <i class="fas fa-undo"></i> Recover
                                        </button>
                                        <button class="btn btn-danger btn-sm" onclick="permanentlyDelete('<%= deletedUser._id %>', '<%= userData.firstName %> <%= userData.lastName %>')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-trash-restore"></i>
                    <h3>Recycle Bin is Empty</h3>
                    <p>No deleted users to recover.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Recover user
        async function recoverUser(deletedUserId, userName) {
            const result = await Swal.fire({
                title: 'Recover User',
                html: `Are you sure you want to recover <strong>${userName}</strong>?<br>The user will be restored with all their data.`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, recover!',
                cancelButtonText: 'Cancel'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/admin-users/recycle-bin/${deletedUserId}/recover`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        await Swal.fire({
                            icon: 'success',
                            title: 'User Recovered!',
                            text: data.message,
                            timer: 2000
                        });
                        location.reload();
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Failed to recover user', 'error');
                }
            }
        }

        // Permanently delete user
        async function permanentlyDelete(deletedUserId, userName) {
            const result = await Swal.fire({
                title: 'Permanent Deletion',
                html: `
                    <p>Are you sure you want to permanently delete <strong>${userName}</strong>?</p>
                    <p class="text-danger"><strong>⚠️ This action cannot be undone!</strong></p>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete permanently!',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/admin-users/recycle-bin/${deletedUserId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        await Swal.fire({
                            icon: 'success',
                            title: 'Permanently Deleted!',
                            text: data.message,
                            timer: 2000
                        });
                        location.reload();
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Failed to delete permanently', 'error');
                }
            }
        }

        // Empty recycle bin
        async function emptyRecycleBin() {
            const deletedCount = <%= deletedUsers.length %>;
            
            if (deletedCount === 0) {
                Swal.fire('Info', 'Recycle bin is already empty', 'info');
                return;
            }

            const result = await Swal.fire({
                title: 'Empty Recycle Bin',
                html: `
                    <p>Are you sure you want to permanently delete all ${deletedCount} user(s)?</p>
                    <p class="text-danger"><strong>⚠️ This action cannot be undone!</strong></p>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, empty recycle bin!',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            });

            if (result.isConfirmed) {
                Swal.fire('Info', 'This feature is coming soon', 'info');
                // TODO: Implement empty recycle bin functionality
            }
        }
    </script>

    <%- include('partials/footer') %>
</body>
</html>