                            <h3 style="margin: 0; font-size: 1.25rem; color: #1f2937;">
                                <i class="fas fa-clipboard-list"></i> Video Assessment / Exam
                            </h3>
                            <label class="switch-group" style="margin: 0;">
                                <span style="margin-right: 0.5rem;">Enable Assessment</span>
                                <label class="switch">
                                    <input type="checkbox" id="enableAssessment" onchange="toggleAssessment()">
                                    <span class="slider"></span>
                                </label>
                            </label>
                        </div>
                        
                        <div id="assessmentSection" style="display: none;">
                            <div class="form-grid" style="margin-bottom: 1rem;">
                                <div class="form-group">
                                    <label>Passing Score (%)</label>
                                    <input type="number" class="form-control" id="passingScore" name="passingScore" 
                                           placeholder="70" min="0" max="100" value="70">
                                </div>
                                
                                <div class="form-group">
                                    <label>Time Limit (minutes)</label>
                                    <input type="number" class="form-control" id="timeLimit" name="timeLimit" 
                                           placeholder="0" min="0">
                                    <div class="form-hint">0 = No time limit</div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Assessment Instructions</label>
                                <textarea class="form-control" id="assessmentInstructions" name="assessmentInstructions" 
                                          placeholder="Instructions for students before starting the assessment..." 
                                          rows="3"></textarea>
                            </div>
                            
                            <div style="margin-top: 1.5rem;">
                                <h4 style="margin-bottom: 1rem; font-size: 1rem;">Exam Questions</h4>
                                <div id="examQuestions"></div>
                                <button type="button" class="btn btn-success btn-sm" onclick="addExamQuestion()">
                                    <i class="fas fa-plus"></i> Add Question
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div style="text-align: right; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
                        <button type="button" class="btn btn-secondary" onclick="closeVideoModal()">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="saveVideoBtn">
                            <span id="saveVideoText">Add Video</span>
                            <span id="saveVideoLoader" class="loading" style="display: none;"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

