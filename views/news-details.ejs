<body>
   <!-- Header Section -->
  <%- include('partials/header') %>

    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <div class="breadcrumb-container">
            <a href="/">Home</a> > <a href="/news">News</a> > <span>Latest News</span>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Latest News & Updates</h1>
            <p>Stay informed about the latest developments in aesthetic medicine education, course announcements, and industry insights from IAAI.</p>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Featured News Section -->
        <div class="featured-news fade-in">
            <div class="featured-content">
                <div class="featured-text">
                    <div class="featured-badge">Featured News</div>
                    <h2>
                        <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latestNewsDes) { %>
                            <%= latestNews.latestNewsDes %>
                        <% } else { %>
                            IAAI Expands Global Aesthetic Medicine Training Programs
                        <% } %>
                    </h2>
                    <div class="featured-meta">
                        <span><i class="fas fa-calendar"></i> <%= new Date().toLocaleDateString() %></span>
                        <span><i class="fas fa-user"></i> IAAI Team</span>
                        <span><i class="fas fa-eye"></i> Featured</span>
                    </div>
                    <p>
                        <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latestNewsDetails) { %>
                            <%= latestNews.latestNewsDetails %>
                        <% } else { %>
                            We are excited to announce the expansion of our internationally recognized aesthetic medicine training programs. With new courses launching in Istanbul, Dubai, and Verona, IAAI continues to lead the industry in providing world-class education for medical professionals seeking to advance their skills in aesthetic medicine.
                        <% } %>
                    </p>
                    <a href="#" class="read-more-btn">Read Full Article</a>
                </div>
                <div class="featured-image">
                    <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latestNewsImage) { %>
                        <img src="<%= latestNews.latestNewsImage %>" alt="Featured News">
                    <% } else { %>
                        <img src="/images/image8.jpeg" alt="IAAI Training Programs">
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Latest News Section -->
        <section class="latest-news-section">
            <div class="section-title">
                <h2>Recent Updates</h2>
                <p>Discover the latest news, course announcements, and achievements from the International Aesthetic Academic Institution</p>
            </div>

            <div class="latest-grid">
                <!-- News Card 1 -->
                <article class="news-card fade-in">
                    <div class="news-card-image">
                        <div class="news-badge">Course Update</div>
                        <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latest1Image) { %>
                            <img src="<%= latestNews.latest1Image %>" alt="Latest News 1">
                        <% } else { %>
                            <img src="/images/image10.jpeg" alt="Course Update">
                        <% } %>
                    </div>
                    <div class="news-card-content">
                        <h3>
                            <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latest1Title) { %>
                                <%= latestNews.latest1Title %>
                            <% } else { %>
                                New Foundation Fillers Course Launch
                            <% } %>
                        </h3>
                        <div class="news-card-meta">
                            <span><i class="fas fa-calendar"></i> <%= new Date(Date.now() - 7*24*60*60*1000).toLocaleDateString() %></span>
                            <span><i class="fas fa-tag"></i> Courses</span>
                        </div>
                        <p>
                            <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latest1Detail) { %>
                                <%= latestNews.latest1Detail.substring(0, 150) %>...
                            <% } else { %>
                                Our comprehensive Foundation Fillers course now includes advanced injection techniques and the latest safety protocols. Learn from internationally renowned experts in a hands-on environment...
                            <% } %>
                        </p>
                        <a href="#" class="read-more-btn">Read More</a>
                    </div>
                </article>

                <!-- News Card 2 -->
                <article class="news-card fade-in">
                    <div class="news-card-image">
                        <div class="news-badge">Achievement</div>
                        <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.latest2Image) { %>
                            <img src="<%= latestNews.latest2Image %>" alt="Latest News 2">
                        <% } else { %>
