        if (result.isConfirmed) {
            try {
                const response = await fetch(`/admin-users/<%= userDetails._id %>/courses/deleted/${deletedCourseId}/recover`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
    
                const data = await response.json();
    
                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Course Recovered',
                        text: data.message,
                        timer: 2000
