        /* Responsive Design */
        @media (max-width: 968px) {
            .offices-grid {
                grid-template-columns: 1fr;
            }

            .hero h1 {
                font-size: 36px;
            }

            .hero p {
                font-size: 16px;
            }

            .office-card {
                padding: 40px 30px;
            }

            .instructors-grid,
            .facilities-grid {
                grid-template-columns: 1fr;
            }

            .programs-list {
                grid-template-columns: 1fr;
            }

            .stats-container {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 20px;
            }
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 28px;
            }

            .office-card {
                padding: 30px 20px;
            }

            .instructor-card {
                padding: 40px 30px;
            }

            .facility-card {
                padding: 30px 20px;
            }

            .location-programs {
                padding: 30px 20px;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeInUp 0.6s ease-out;
        }
    </style>
</head>
