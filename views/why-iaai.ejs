            padding: 80px 0;
        }

        .impact-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .impact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin-top: 60px;
        }

        .impact-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .impact-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #ffcc00, #b8860b);
        }

        .impact-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
        }

        .impact-icon {
            font-size: 48px;
            color: #ffcc00;
            margin-bottom: 25px;
        }

        .impact-card h3 {
            font-size: 24px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 15px;
        }

        .impact-card p {
            font-size: 16px;
            line-height: 1.6;
            color: #666;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            padding: 80px 0;
            text-align: center;
        }

        .cta-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .cta-section h2 {
            font-size: 42px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 20px;
        }

        .cta-section p {
            font-size: 18px;
            color: #333;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .cta-btn {
            background: #002147;
            color: #ffffff;
            padding: 15px 35px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0, 33, 71, 0.3);
        }

        .cta-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 33, 71, 0.5);
            background: #001a3a;
        }

        .cta-btn.secondary {
            background: transparent;
            border: 2px solid #002147;
            color: #002147;
        }

        .cta-btn.secondary:hover {
            background: #002147;
            color: #ffffff;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 32px;
            }

            .hero p {
                font-size: 16px;
            }

            .section-grid {
                grid-template-columns: 1fr;
            }

            .section-content {
                padding: 40px 30px;
            }

            .section-content h2 {
                font-size: 28px;
            }

            .stats-container {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 20px;
            }

            .tech-grid,
            .impact-grid {
                grid-template-columns: 1fr;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeInUp 0.6s ease-out;
        }
    </style>
</head>
