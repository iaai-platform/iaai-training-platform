  backdrop.className = 'modal-backdrop fade show';
  backdrop.id = 'sessionBackdrop';
  document.body.appendChild(backdrop);
  
  // Prevent body scroll
  document.body.style.overflow = 'hidden';
  
  // Track session start
  trackSessionEvent('session_embedded_opened', courseTitle);
}

function closeLiveSession() {
  const modal = document.getElementById('liveSessionModal');
  const backdrop = document.getElementById('sessionBackdrop');
  
  // Clear iframe source to stop the session
  document.getElementById('liveSessionFrame').src = 'about:blank';
  
  // Hide modal
  modal.style.display = 'none';
  modal.classList.remove('show');
  
  // Remove backdrop
  if (backdrop) {
    backdrop.remove();
  }
  
  // Restore body scroll
  document.body.style.overflow = 'auto';
  
  // Exit fullscreen if active
  if (isFullscreen) {
    exitFullscreen();
  }
  
  // Track session end
  trackSessionEvent('session_embedded_closed', null);
}

function toggleFullscreen() {
  const modal = document.getElementById('liveSessionModal');
  const icon = document.getElementById('fullscreenIcon');
  
  if (!isFullscreen) {
    // Enter fullscreen
    if (modal.requestFullscreen) {
      modal.requestFullscreen();
    } else if (modal.webkitRequestFullscreen) {
      modal.webkitRequestFullscreen();
    } else if (modal.msRequestFullscreen) {
      modal.msRequestFullscreen();
    }
    icon.className = 'fas fa-compress';
    isFullscreen = true;
  } else {
    // Exit fullscreen
    exitFullscreen();
  }
}

function exitFullscreen() {
  if (document.exitFullscreen) {
    document.exitFullscreen();
  } else if (document.webkitExitFullscreen) {
    document.webkitExitFullscreen();
  } else if (document.msExitFullscreen) {
    document.msExitFullscreen();
  }
  document.getElementById('fullscreenIcon').className = 'fas fa-expand';
  isFullscreen = false;
}

function trackSessionEvent(eventType, courseTitle) {
  try {
    // Optional: Track usage analytics
    console.log('Session event:', eventType, courseTitle);
    
    // You can add analytics tracking here if needed
    // Example: gtag('event', eventType, { course_title: courseTitle });
  } catch (error) {
    console.log('Analytics tracking error:', error);
  }
}

// Handle fullscreen change events
document.addEventListener('fullscreenchange', function() {
  if (!document.fullscreenElement) {
    isFullscreen = false;
    document.getElementById('fullscreenIcon').className = 'fas fa-expand';
  }
});

// Close modal on escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    const modal = document.getElementById('liveSessionModal');
    if (modal.style.display === 'block') {
      closeLiveSession();
    }
  }
});
 </script>
