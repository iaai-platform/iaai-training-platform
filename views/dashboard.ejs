    <% if (user && user.role === 'instructor') { %>

      <div class="section-divider instructor-section">
        <h2><i class="fas fa-chalkboard-teacher"></i> Instructor Dashboard</h2>
        <p>Teaching tools and course management</p>
      </div>

      <div class="dashboard-grid instructor-grid">

        <div class="dashboard-card instructor-card">
          <div class="card-icon instructor">
            <i class="fas fa-file-signature"></i>
          </div>
          <h3>My Applications</h3>
          <p>View your instructor applications and status.</p>
          <a href="/instructor-applications" class="card-btn">View Applications</a>
        </div>

        <div class="dashboard-card instructor-card">
          <div class="card-icon instructor">
            <i class="fas fa-chalkboard"></i>
          </div>
          <h3>My Teaching Courses</h3>
          <p>See courses you've been assigned to teach.</p>
          <a href="/instructor/me/courses" class="card-btn">My Courses</a> </div>

        <div class="dashboard-card instructor-card">
          <div class="card-icon instructor" style="color: #FFD700;">
            <i class="fas fa-id-card"></i>
          </div>
          <h3>My Profile Page</h3>
          <p>View your complete instructor profile and course involvement.</p>
          <a href="/instructor/me" class="card-btn">View Profile</a>
        </div>




        
        <div class="dashboard-card instructor-card">
          <div class="card-icon instructor" style="color: #FFD700;">
            <i class="fas fa-user-edit"></i>
          </div>
          <h3>Edit My Information</h3>
          <p>Update your personal and professional details as an instructor.</p>
          <a href="/instructor/me/edit" class="card-btn">Edit Details</a>
        </div>



      </div>

    <% } %>

  </div>

  <%- include('partials/footer') %>
  
  <script>
    function openLiveChat() {
      // Placeholder for live chat functionality
      alert('Live Chat feature coming soon! Please use the Contact Support form for now.');
    }
  </script>

  <style>
    .section-divider {
      margin: 50px 0 30px 0;
      padding: 20px 0;
      border-bottom: 2px solid #f1f3f4;
      text-align: center;
    }

    .section-divider h2 {
      color: #333;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .section-divider p {
      color: #6c757d;
      margin: 0;
    }

    .card-icon {
      font-size: 2.5rem;
      margin-bottom: 15px;
      text-align: center;
    }

    .card-icon.security { color: #dc3545; }
    .card-icon.notifications { color: #ffc107; }
    .card-icon.privacy { color: #6f42c1; }
    .card-icon.billing { color: #28a745; }
    .card-icon.learning { color: #17a2b8; }
    .card-icon.professional { color: #fd7e14; }
    .card-icon.help { color: #007bff; }
    .card-icon.contact { color: #28a745; }
    .card-icon.tickets { color: #ffc107; }
    .card-icon.community { color: #6f42c1; }
    .card-icon.feedback { color: #fd7e14; }
    .card-icon.chat { color: #17a2b8; }
    .card-icon.admin { color: #dc3545; }
    .card-icon.instructor { color: #28a745; }
    .card-icon.recycle-bin { color: #ffc107; }
    .card-icon.certificate { color: #f39c12; }

    .settings-card {
      border-left: 4px solid #007bff;
      background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
    }

    .support-card {
      border-left: 4px solid #28a745;
      background: linear-gradient(135deg, #f8fff8 0%, #ffffff 100%);
    }
    
    .admin-card {
      border-left: 4px solid #dc3545;
      background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
    }
    
    .instructor-card {
      border-left: 4px solid #28a745;
      background: linear-gradient(135deg, #f5fff5 0%, #ffffff 100%);
    }

    /* Special styling for recycle bin card */
    .recycle-bin-card {
      border-left: 4px solid #ffc107;
      background: linear-gradient(135deg, #fffdf5 0%, #ffffff 100%);
      position: relative;
      overflow: hidden;
    }

    .recycle-bin-card::after {
      content: '';
      position: absolute;
      top: -20px;
      right: -20px;
      width: 60px;
      height: 60px;
      background: rgba(255, 193, 7, 0.1);
      border-radius: 50%;
    }

    .admin-section h2 { color: #dc3545; }
    .instructor-section h2 { color: #28a745; }

    .card-btn {
      display: inline-block;
      padding: 10px 20px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
      margin-top: 10px;
    }

    .card-btn:hover {
      background: #0056b3;
      text-decoration: none;
      color: white;
    }

    .dashboard-card h3 {
      color: #333;
      font-weight: 600;
      margin-bottom: 10px;
    }

    /* Animation for the recycle bin icon on hover */
    .recycle-bin-card:hover .card-icon {
      animation: rotate 0.5s ease-in-out;
    }

    /* Certificate card special styling */
    .dashboard-card:has(.card-icon.certificate) {
      border-left: 4px solid #f39c12;
      background: linear-gradient(135deg, #fffaf0 0%, #ffffff 100%);
    }

    @keyframes rotate {
      0% { transform: rotate(0deg); }
      25% { transform: rotate(-10deg); }
      75% { transform: rotate(10deg); }
      100% { transform: rotate(0deg); }
    }
  </style>
</body>

</html>