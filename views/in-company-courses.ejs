    <!-- âœ… JavaScript for Form Submission -->
    <script>
        document.getElementById('inCompanyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            const response = await fetch('/apply-in-company', { // âœ… Fix route name
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            alert(result.message);
            if (result.success) {
                e.target.reset();
            }
        });
    </script>

