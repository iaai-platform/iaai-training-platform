<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f4f4f4;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Breadcrumb */
        .breadcrumb {
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            padding: 20px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .breadcrumb-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .breadcrumb a {
            color: #002147;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .breadcrumb a:hover {
            color: #ffcc00;
        }

        .breadcrumb span {
            color: #666;
        }

        /* Hero Section */
        .instructor-hero {
            background: linear-gradient(135deg, #002147 0%, #003366 100%);
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .instructor-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.3;
        }

        .hero-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            position: relative;
            z-index: 2;
        }

        .instructor-header {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 60px;
            align-items: center;
        }

        .instructor-image-container {
            position: relative;
        }

        .instructor-main-image {
            width: 300px;
            height: 300px;
            border-radius: 25px;
            object-fit: cover;
            border: 6px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
        }

        .status-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(40, 167, 69, 0.9);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .instructor-info {
            color: white;
        }

        .instructor-name {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .instructor-title {
            font-size: 24px;
            color: #ffcc00;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .instructor-designation {
            font-size: 18px;
            color: #e0e0e0;
            margin-bottom: 30px;
        }

        .instructor-quick-stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            margin-bottom: 30px;
        }

        .quick-stat {
            text-align: center;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }

        .quick-stat .number {
            font-size: 28px;
            font-weight: 700;
            color: #ffcc00;
            display: block;
            margin-bottom: 5px;
        }

        .quick-stat .label {
            font-size: 12px;
            color: #e0e0e0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .instructor-actions {
            display: flex;
            gap: 20px;
        }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            color: #002147;
            box-shadow: 0 8px 25px rgba(255, 204, 0, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(255, 204, 0, 0.5);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
        }

        /* Main Content */
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 80px 20px;
        }

        .content-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 60px;
        }

        .main-column {
            display: flex;
            flex-direction: column;
            gap: 40px;
        }

        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        /* Content Cards */
        .content-card {
            background: #ffffff;
            border-radius: 25px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            padding: 40px;
            position: relative;
            overflow: hidden;
        }

        .content-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #ffcc00, #b8860b, #002147);
        }

        .section-title {
            font-size: 28px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 25px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #ffcc00, #b8860b);
        }

        /* Biography */
        .bio-text {
            font-size: 16px;
            line-height: 1.8;
            color: #444;
            text-align: justify;
        }

        /* Experience & Qualifications */
        .info-list {
            list-style: none;
            padding: 0;
        }

        .info-list li {
            background: #f8f9fa;
            margin-bottom: 15px;
            padding: 20px;
            border-radius: 15px;
            border-left: 5px solid #ffcc00;
            transition: all 0.3s ease;
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

        .info-list li:hover {
            background: #e3f2fd;
            transform: translateX(5px);
        }

        .info-list li i {
            color: #ffcc00;
            font-size: 18px;
            width: 20px;
            text-align: center;
            margin-top: 2px;
        }

        .info-content {
            flex: 1;
        }

        .info-title {
            font-weight: 700;
            color: #002147;
            font-size: 16px;
            margin-bottom: 5px;
        }

        .info-description {
            font-size: 14px;
            color: #666;
            line-height: 1.5;
        }

        /* Expertise Tags */
        .expertise-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .expertise-category {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 20px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s ease;
        }

        .expertise-category:hover {
            border-color: #ffcc00;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .category-title {
            font-size: 18px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .expertise-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .expertise-tag {
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            color: #002147;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        /* Publications */
        .publication-item {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 20px;
            border-left: 5px solid #002147;
            transition: all 0.3s ease;
        }

        .publication-item:hover {
            background: #e3f2fd;
            transform: translateX(5px);
        }

        .publication-title {
            font-size: 18px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 10px;
        }

        .publication-meta {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
            font-size: 14px;
            color: #666;
        }

        .publication-type {
            background: #ffcc00;
            color: #002147;
            padding: 4px 10px;
            border-radius: 10px;
            font-size: 12px;
            font-weight: 600;
        }

        /* Sidebar Cards */
        .sidebar-card {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            position: relative;
        }

        .sidebar-card h3 {
            font-size: 20px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Rating Display */
        .rating-display {
            text-align: center;
            margin-bottom: 25px;
        }

        .rating-number {
            font-size: 48px;
            font-weight: 800;
            color: #ffcc00;
            line-height: 1;
        }

        .rating-stars {
            font-size: 20px;
            color: #ffcc00;
            margin: 10px 0;
        }

        .rating-text {
            font-size: 14px;
            color: #666;
        }

        /* Contact Info */
        .contact-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .contact-item:last-child {
            border-bottom: none;
        }

        .contact-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #002147;
            font-size: 16px;
        }

        .contact-info {
            flex: 1;
        }

        .contact-label {
            font-size: 12px;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .contact-value {
            font-size: 14px;
            color: #002147;
            font-weight: 600;
        }

        /* Courses */
        .course-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
        }

        .course-item:hover {
            background: #e3f2fd;
            transform: translateX(5px);
        }

        .course-info h4 {
            font-size: 16px;
            font-weight: 600;
            color: #002147;
            margin-bottom: 5px;
        }

        .course-date {
            font-size: 12px;
            color: #666;
        }

        .course-status {
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-upcoming {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-progress {
            background: #fff3e0;
            color: #f57c00;
        }

        .status-completed {
            background: #e8f5e8;
            color: #388e3c;
        }

        /* Languages */
        .languages-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .language-tag {
            background: linear-gradient(135deg, #002147, #003366);
            color: #ffffff;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        /* Certifications */
        .certification-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 15px;
            border-left: 5px solid #28a745;
        }

        .cert-name {
            font-size: 16px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 5px;
        }

        .cert-org {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .cert-date {
            font-size: 12px;
            color: #999;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .instructor-header {
                grid-template-columns: 250px 1fr;
                gap: 40px;
            }

            .instructor-main-image {
                width: 250px;
                height: 250px;
            }

            .instructor-name {
                font-size: 36px;
            }

            .content-grid {
                grid-template-columns: 1fr;
                gap: 40px;
            }
        }

        @media (max-width: 768px) {
            .instructor-header {
                grid-template-columns: 1fr;
                text-align: center;
                gap: 30px;
            }

            .instructor-main-image {
                width: 200px;
                height: 200px;
                margin: 0 auto;
            }

            .instructor-name {
                font-size: 28px;
            }

            .instructor-quick-stats {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
            }

            .instructor-actions {
                justify-content: center;
                flex-wrap: wrap;
            }

            .expertise-grid {
                grid-template-columns: 1fr;
            }

            .filters-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Back to Top */
        .back-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            color: #002147;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(255, 204, 0, 0.3);
            display: none;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .back-to-top:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(255, 204, 0, 0.5);
        }

        .back-to-top.show {
            display: flex;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <div class="breadcrumb-container">
            <a href="/">Home</a> > <a href="/instructors">Instructors</a> > <span><%= instructor.firstName %> <%= instructor.lastName %></span>
        </div>
    </nav>

    <!-- Instructor Hero -->
    <section class="instructor-hero">
        <div class="hero-content">
            <div class="instructor-header">
                <div class="instructor-image-container">
                    <img src="<%= instructor.profileImage || '/images/default-instructor.jpg' %>" alt="<%= instructor.firstName %> <%= instructor.lastName %>" class="instructor-main-image">
                    <div class="status-badge">
                        <i class="fas fa-circle"></i> <%= instructor.status %>
                    </div>
                </div>
                
                <div class="instructor-info">
                    <h1 class="instructor-name">
                        <%= instructor.title ? instructor.title + ' ' : '' %><%= instructor.firstName %> <%= instructor.lastName %>
                    </h1>
                    <div class="instructor-title"><%= instructor.designation || 'Aesthetic Medicine Expert' %></div>
                    <div class="instructor-designation"><%= instructor.expertise?.[0] || 'General Practice' %></div>
                    
                    <div class="instructor-quick-stats">
                        <div class="quick-stat">
                            <span class="number"><%= instructor.yearsExperience %>+</span>
                            <span class="label">Years Experience</span>
                        </div>
                        <div class="quick-stat">
                            <span class="number"><%= instructor.totalCourses %></span>
                            <span class="label">Courses Taught</span>
                        </div>
                        <div class="quick-stat">
                            <span class="number"><%= instructor.averageRating %></span>
                            <span class="label">Average Rating</span>
                        </div>
                        <div class="quick-stat">
                            <span class="number"><%= instructor.upcomingCourses.length %></span>
                            <span class="label">Upcoming</span>
                        </div>
                    </div>
                    
                    <div class="instructor-actions">
                        <button class="btn btn-primary" onclick="contactInstructor()">
                            <i class="fas fa-envelope"></i> Contact Instructor
                        </button>
                        <a href="/instructors" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Instructors
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-grid">
            <!-- Main Column -->
            <div class="main-column">
                <!-- Biography -->
                <% if (instructor.bio) { %>
                <div class="content-card fade-in">
                    <h2 class="section-title">
                        <i class="fas fa-user-circle"></i> Biography
                    </h2>
                    <p class="bio-text"><%= instructor.bio %></p>
                </div>
                <% } %>

                <!-- Experience & Qualifications -->
                <div class="content-card fade-in">
                    <h2 class="section-title">
                        <i class="fas fa-graduation-cap"></i> Experience & Qualifications
                    </h2>
                    <ul class="info-list">
                        <li>
                            <i class="fas fa-clock"></i>
                            <div class="info-content">
                                <div class="info-title">Professional Experience</div>
                                <div class="info-description"><%= instructor.experience %> years in aesthetic medicine and related fields</div>
                            </div>
                        </li>
                        <% if (instructor.qualifications && instructor.qualifications.length > 0) { %>
                            <% instructor.qualifications.forEach(qual => { %>
                                <li>
                                    <i class="fas fa-certificate"></i>
                                    <div class="info-content">
                                        <div class="info-title">Qualification</div>
                                        <div class="info-description"><%= qual %></div>
                                    </div>
                                </li>
                            <% }) %>
                        <% } %>
                        <% if (instructor.achievements && instructor.achievements.length > 0) { %>
                            <% instructor.achievements.forEach(achievement => { %>
                                <li>
                                    <i class="fas fa-trophy"></i>
                                    <div class="info-content">
                                        <div class="info-title">Achievement</div>
                                        <div class="info-description"><%= achievement %></div>
                                    </div>
                                </li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>

                <!-- Areas of Expertise -->
                <div class="content-card fade-in">
                    <h2 class="section-title">
                        <i class="fas fa-stethoscope"></i> Areas of Expertise
                    </h2>
                    <div class="expertise-grid">
                        <% if (instructor.expertise && instructor.expertise.length > 0) { %>
                        <div class="expertise-category">
                            <h4 class="category-title">
                                <i class="fas fa-microscope"></i> Primary Expertise
                            </h4>
                            <div class="expertise-tags">
                                <% instructor.expertise.forEach(exp => { %>
                                    <span class="expertise-tag"><%= exp %></span>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                        
                        <% if (instructor.specializations && instructor.specializations.length > 0) { %>
                        <div class="expertise-category">
                            <h4 class="category-title">
                                <i class="fas fa-star"></i> Specializations
                            </h4>
                            <div class="expertise-tags">
                                <% instructor.specializations.forEach(spec => { %>
                                    <span class="expertise-tag"><%= spec %></span>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Publications -->
                <% if (instructor.publications && instructor.publications.length > 0) { %>
                <div class="content-card fade-in">
                    <h2 class="section-title">
                        <i class="fas fa-book"></i> Publications & Research
                    </h2>
                    <% instructor.publications.forEach(pub => { %>
                        <div class="publication-item">
                            <h4 class="publication-title"><%= pub.title %></h4>
                            <div class="publication-meta">
                                <span class="publication-type"><%= pub.type %></span>
                                <span><%= pub.publishedIn %></span>
                                <span><%= pub.year %></span>
                            </div>
                            <% if (pub.link) { %>
                                <a href="<%= pub.link %>" target="_blank" class="btn btn-secondary" style="display: inline-block; margin-top: 10px; padding: 8px 15px; font-size: 12px;">
                                    <i class="fas fa-external-link-alt"></i> View Publication
                                </a>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
                <% } %>

                <!-- Certifications -->
                <% if (instructor.certifications && instructor.certifications.length > 0) { %>
                <div class="content-card fade-in">
                    <h2 class="section-title">
                        <i class="fas fa-award"></i> Certifications
                    </h2>
                    <% instructor.certifications.forEach(cert => { %>
                        <div class="certification-item">
                            <div class="cert-name"><%= cert.name %></div>
                            <div class="cert-org"><%= cert.issuingOrganization %></div>
                            <div class="cert-date">
                                Issued: <%= new Date(cert.issueDate).getFullYear() %>
                                <% if (cert.expiryDate) { %>
                                    | Expires: <%= new Date(cert.expiryDate).getFullYear() %>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <% } %>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Rating & Reviews -->
                <% if (instructor.averageRating > 0) { %>
                <div class="sidebar-card fade-in">
                    <h3><i class="fas fa-star"></i> Instructor Rating</h3>
                    <div class="rating-display">
                        <div class="rating-number"><%= instructor.averageRating %></div>
                        <div class="rating-stars">
                            <% for(let i = 1; i <= 5; i++) { %>
                                <i class="fas fa-star <%= i <= Math.floor(instructor.averageRating) ? '' : 'far' %>"></i>
                            <% } %>
                        </div>
                        <div class="rating-text">Based on <%= instructor.ratings?.totalRatings || 0 %> reviews</div>
                    </div>
                </div>
                <% } %>

                <!-- Contact Information -->
                <div class="sidebar-card fade-in">
                    <h3><i class="fas fa-address-card"></i> Contact Information</h3>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info">
                            <div class="contact-label">Email</div>
                            <div class="contact-value"><%= instructor.email %></div>
                        </div>
                    </div>
                    <% if (instructor.phoneNumber) { %>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-info">
                            <div class="contact-label">Phone</div>
                            <div class="contact-value"><%= instructor.phoneNumber %></div>
                        </div>
                    </div>
                    <% } %>
                    <% if (instructor.address && (instructor.address.city || instructor.address.country)) { %>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-info">
                            <div class="contact-label">Location</div>
                            <div class="contact-value">
                                <%= instructor.address.city %><%= instructor.address.city && instructor.address.country ? ', ' : '' %><%= instructor.address.country %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Languages -->
                <% if (instructor.languages && instructor.languages.length > 0) { %>
                <div class="sidebar-card fade-in">
                    <h3><i class="fas fa-language"></i> Languages</h3>
                    <div class="languages-list">
                        <% instructor.languages.forEach(lang => { %>
                            <span class="language-tag"><%= lang %></span>
                        <% }) %>
                    </div>
                </div>
                <% } %>

                <!-- Upcoming Courses -->
                <% if (instructor.upcomingCourses && instructor.upcomingCourses.length > 0) { %>
                <div class="sidebar-card fade-in">
                    <h3><i class="fas fa-calendar-alt"></i> Upcoming Courses</h3>
                    <% instructor.upcomingCourses.forEach(course => { %>
                        <div class="course-item">
                            <div class="course-info">
                                <h4><%= course.courseTitle %></h4>
                                <div class="course-date">
                                    <i class="fas fa-calendar"></i> 
                                    <%= new Date(course.startDate).toLocaleDateString() %>
                                </div>
                            </div>
                            <span class="course-status status-upcoming"><%= course.status %></span>
                        </div>
                    <% }) %>
                </div>
                <% } %>

                <!-- Social Media -->
                <% if (instructor.socialMedia && (instructor.socialMedia.linkedin || instructor.socialMedia.twitter || instructor.socialMedia.website)) { %>
                <div class="sidebar-card fade-in">
                    <h3><i class="fas fa-share-alt"></i> Connect</h3>
                    <div style="display: flex; justify-content: center; gap: 15px;">
                        <% if (instructor.socialMedia.linkedin) { %>
                            <a href="<%= instructor.socialMedia.linkedin %>" target="_blank" class="btn btn-secondary" style="padding: 12px; border-radius: 50%;">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        <% } %>
                        <% if (instructor.socialMedia.twitter) { %>
                            <a href="<%= instructor.socialMedia.twitter %>" target="_blank" class="btn btn-secondary" style="padding: 12px; border-radius: 50%;">
                                <i class="fab fa-twitter"></i>
                            </a>
                        <% } %>
                        <% if (instructor.socialMedia.website) { %>
                            <a href="<%= instructor.socialMedia.website %>" target="_blank" class="btn btn-secondary" style="padding: 12px; border-radius: 50%;">
                                <i class="fas fa-globe"></i>
                            </a>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Back to Top Button -->
    <button class="back-to-top" onclick="scrollToTop()">
        <i class="fas fa-arrow-up"></i>
    </button>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.content-card, .sidebar-card').forEach(el => {
                observer.observe(el);
            });

            // Back to top button
            const backToTopBtn = document.querySelector('.back-to-top');
            
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    backToTopBtn.classList.add('show');
                } else {
                    backToTopBtn.classList.remove('show');
                }
            });
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        function contactInstructor() {
            // You can implement various contact methods here
            const email = '<%= instructor.email %>';
            const subject = 'Inquiry about your courses at IAAI';
            const body = 'Dear <%= instructor.title ? instructor.title + " " : "" %><%= instructor.lastName %>,\n\nI am interested in learning more about your courses at IAAI.\n\nBest regards,';
            
            window.location.href = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        }
    </script>
</body>
</html>