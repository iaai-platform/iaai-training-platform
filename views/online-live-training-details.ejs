    }
    
    .instructor-specializations {
      margin-top: 20px;
    }
    
    .specialization-title {
      font-size: 16px;
      font-weight: 600;
      color: #002147;
      margin-bottom: 10px;
    }
    
    .specialization-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    
    .specialization-tag {
      padding: 5px 12px;
      background: #b8860b;
      color: white;
      border-radius: 15px;
      font-size: 12px;
      font-weight: 500;
    }
    
    /* Platform Features */
    .platform-features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 25px;
      margin-top: 30px;
    }
    
    .platform-feature {
      text-align: center;
      padding: 30px;
      background: #f8f9fa;
      border-radius: 15px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .platform-feature::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(184, 134, 11, 0.1) 0%, rgba(0, 33, 71, 0.05) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .platform-feature:hover::before {
      opacity: 1;
    }
    
    .platform-feature:hover {
      background: white;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      transform: translateY(-8px);
    }
    
    .platform-icon {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, #b8860b 0%, #9a7209 100%);
      border-radius: 50%;
