            </div>
        </div>
    </div>

    <!-- Video Modal -->
    <div id="videoModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="videoModalTitle">Add Video</h2>
                <button class="close" onclick="closeVideoModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="videoForm" enctype="multipart/form-data">
                    <input type="hidden" id="videoId" name="videoId">
                    <input type="hidden" id="videoCourseId" name="courseId">
                    
                    <div class="form-group">
                        <label>Video Title <span>*</span></label>
                        <input type="text" class="form-control" id="videoTitle" name="title" 
