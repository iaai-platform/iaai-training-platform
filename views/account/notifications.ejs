<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notification Settings - IAAI</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        .settings-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
        }
        .settings-header {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
            color: #333;
            padding: 30px;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }
        .settings-content {
            background: white;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .settings-section {
            padding: 30px;
            border-bottom: 1px solid #e9ecef;
        }
        .settings-section:last-child {
            border-bottom: none;
        }
        .section-title {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            color: #333;
            font-size: 1.3rem;
            font-weight: 600;
        }
        .notification-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid #ffc107;
        }
        .notification-details {
            flex: 1;
        }
        .notification-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        .notification-description {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
        }
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 30px;
        }
        .slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .slider {
            background-color: #ffc107;
        }
        input:checked + .slider:before {
            transform: translateX(30px);
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            background: white;
        }
        .btn {
            background: #ffc107;
            color: #333;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: background-color 0.3s;
        }
        .btn:hover {
            background: #e0a800;
        }
        .notification-preview {
            background: #e7f3ff;
            border: 1px solid #b8daff;
            border-radius: 5px;
            padding: 15px;
            margin-top: 20px;
        }
        .preview-title {
            font-weight: 600;
            color: #004085;
            margin-bottom: 10px;
        }
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            z-index: 1000;
            animation: slideIn 0.3s ease-out;
        }
        .notification.success { background-color: #28a745; }
        .notification.error { background-color: #dc3545; }
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

    <nav class="breadcrumb">
        <a href="/">Home</a> > 
        <a href="/dashboard">Dashboard</a> > 
        <span>Notification Settings</span>
    </nav>

    <div class="settings-container">
        <div class="settings-header">
            <h1><i class="fas fa-bell"></i> Notification Settings</h1>
            <p>Customize how and when you receive notifications</p>
        </div>

        <div class="settings-content">
            <form id="notificationForm">
                <!-- Email Notifications -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-envelope"></i>
                        Email Notifications
                    </div>

                    <div class="notification-item">
                        <div class="notification-details">
                            <div class="notification-title">Course Updates</div>
                            <div class="notification-description">
                                Get notified about new lessons, assignments, and course announcements
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="courseUpdates" <%= (user.notificationSettings && user.notificationSettings.courseUpdates) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div class="notification-item">
                        <div class="notification-details">
                            <div class="notification-title">Course Reminders</div>
                            <div class="notification-description">
                                Reminders about upcoming live sessions and assignment due dates
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="reminders" <%= (user.notificationSettings && user.notificationSettings.reminders) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div class="notification-item">
                        <div class="notification-details">
                            <div class="notification-title">Promotions & Offers</div>
                            <div class="notification-description">
                                Special discounts, new course launches, and promotional offers
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="promotions" <%= (user.notificationSettings && user.notificationSettings.promotions) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div class="notification-item">
                        <div class="notification-details">
                            <div class="notification-title">Account Security</div>
                            <div class="notification-description">
                                Login alerts, password changes, and security notifications (Always enabled)
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="security" checked disabled>
                            <span class="slider" style="background-color: #28a745; opacity: 0.7;"></span>
                        </label>
                    </div>
                </div>

                <!-- Digest Settings -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-clock"></i>
                        Email Digest
                    </div>

                    <div class="form-group">
                        <label>How often would you like to receive email summaries?</label>
                        <select name="digest">
                            <option value="daily" <%= (user.notificationSettings && user.notificationSettings.digest === 'daily') ? 'selected' : '' %>>Daily Digest</option>
                            <option value="weekly" <%= (user.notificationSettings && user.notificationSettings.digest === 'weekly') ? 'selected' : '' %>>Weekly Digest</option>
                            <option value="monthly" <%= (user.notificationSettings && user.notificationSettings.digest === 'monthly') ? 'selected' : '' %>>Monthly Digest</option>
                        </select>
                    </div>

                    <div class="notification-preview">
                        <div class="preview-title">ðŸ“§ Preview: Weekly Digest</div>
                        <p><strong>Subject:</strong> Your weekly learning summary from IAAI</p>
                        <p><strong>Content:</strong> Course progress updates, new available courses, upcoming live sessions, and achievement highlights.</p>
                    </div>
                </div>

                <!-- Mobile Notifications (Future) -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-mobile-alt"></i>
                        Mobile Notifications
                    </div>

                    <div class="notification-item" style="opacity: 0.6;">
                        <div class="notification-details">
                            <div class="notification-title">Push Notifications</div>
                            <div class="notification-description">
                                Receive notifications on your mobile device (Coming soon)
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" disabled>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="settings-section">
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i> Save Notification Settings
                    </button>
                    
                    <button type="button" class="btn" style="background: #6c757d; margin-left: 10px;" onclick="testEmail()">
                        <i class="fas fa-paper-plane"></i> Send Test Email
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Handle form submission
        document.getElementById('notificationForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/account/notifications', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    showNotification(result.message, 'success');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('Error updating notifications:', error);
                showNotification('Error updating notification settings', 'error');
            }
        });

        // Test email function
        async function testEmail() {
            try {
                const response = await fetch('/account/notifications/test', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();
                showNotification('Test email sent! Check your inbox.', 'success');
            } catch (error) {
                console.error('Error sending test email:', error);
                showNotification('Error sending test email', 'error');
            }
        }

        // Notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }

        // Update digest preview based on selection
        document.querySelector('select[name="digest"]').addEventListener('change', function(e) {
            const preview = document.querySelector('.notification-preview');
            const frequency = e.target.value;
            
            let title = '';
            switch(frequency) {
                case 'daily':
                    title = 'ðŸ“§ Preview: Daily Digest';
                    break;
                case 'weekly':
                    title = 'ðŸ“§ Preview: Weekly Digest';
                    break;
                case 'monthly':
                    title = 'ðŸ“§ Preview: Monthly Digest';
                    break;
            }
            
            preview.querySelector('.preview-title').textContent = title;
        });
    </script>
</body>
</html>