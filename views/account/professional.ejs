<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Profile - IAAI</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        .settings-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
        }
        .settings-header {
            background: linear-gradient(135deg, #fd7e14 0%, #e55a00 100%);
            color: white;
            padding: 30px;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }
        .settings-content {
            background: white;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .settings-section {
            padding: 30px;
            border-bottom: 1px solid #e9ecef;
        }
        .settings-section:last-child {
            border-bottom: none;
        }
        .section-title {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            color: #333;
            font-size: 1.3rem;
            font-weight: 600;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        .form-row > div {
            flex: 1;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }
        input[type="text"], input[type="url"], input[type="number"], textarea, select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            transition: border-color 0.3s;
            font-family: inherit;
        }
        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: #fd7e14;
            box-shadow: 0 0 0 2px rgba(253,126,20,0.25);
        }
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        .specialization-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        .tag {
            background: #fd7e14;
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .tag .remove {
            cursor: pointer;
            font-weight: bold;
        }
        .add-specialization {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .add-specialization input {
            flex: 1;
        }
        .btn {
            background: #fd7e14;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s;
        }
        .btn:hover {
            background: #e55a00;
        }
        .btn-secondary {
            background: #6c757d;
        }
        .btn-secondary:hover {
            background: #545b62;
        }
        .btn-sm {
            padding: 8px 16px;
            font-size: 0.9rem;
        }
        .professional-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            border-left: 4px solid #fd7e14;
            margin-bottom: 20px;
        }
        .card-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }
        .card-content {
            color: #6c757d;
        }
        .verification-status {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        .status-unverified {
            background: #fff3cd;
            color: #856404;
        }
        .status-pending {
            background: #cce5ff;
            color: #004085;
        }
        .status-verified {
            background: #d4edda;
            color: #155724;
        }
        .portfolio-section {
            background: #fff9f2;
            border: 1px solid #fdcb6e;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }
        .portfolio-title {
            color: #fd7e14;
            font-weight: 600;
            margin-bottom: 15px;
        }
        .achievement-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: white;
            border-radius: 8px;
            margin-bottom: 10px;
            border: 1px solid #e9ecef;
        }
        .achievement-icon {
            width: 50px;
            height: 50px;
            background: #fd7e14;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
        }
        .achievement-details {
            flex: 1;
        }
        .achievement-title {
            font-weight: 600;
            color: #333;
        }
        .achievement-description {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            z-index: 1000;
            animation: slideIn 0.3s ease-out;
        }
        .notification.success { background-color: #28a745; }
        .notification.error { background-color: #dc3545; }
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

    <nav class="breadcrumb">
        <a href="/">Home</a> > 
        <a href="/dashboard">Dashboard</a> > 
        <span>Professional Profile</span>
    </nav>

    <div class="settings-container">
        <div class="settings-header">
            <h1><i class="fas fa-briefcase"></i> Professional Profile</h1>
            <p>Showcase your expertise and connect with the aesthetic medicine community</p>
        </div>

        <div class="settings-content">
            <form id="professionalForm">
                <!-- Professional Information -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-id-card"></i>
                        Professional Information
                    </div>

                    <div class="form-row">
                        <div>
                            <label>Clinic/Practice Name:</label>
                            <input type="text" name="clinicName" value="<%= (user.professionalProfile && user.professionalProfile.clinicName) ? user.professionalProfile.clinicName : '' %>" placeholder="Your clinic or practice name">
                        </div>
                        <div>
                            <label>Professional License Number:</label>
                            <input type="text" name="licenseNumber" value="<%= (user.professionalProfile && user.professionalProfile.licenseNumber) ? user.professionalProfile.licenseNumber : '' %>" placeholder="e.g., MD123456">
                            <div class="verification-status status-unverified">
                                <i class="fas fa-exclamation-circle"></i> Unverified
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label>Years of Experience:</label>
                            <input type="number" name="yearsExperience" value="<%= (user.professionalProfile && user.professionalProfile.yearsExperience) ? user.professionalProfile.yearsExperience : '' %>" min="0" max="50" placeholder="0">
                        </div>
                        <div>
                            <label>Primary Role:</label>
                            <select name="primaryRole">
                                <option value="">Select your primary role</option>
                                <option value="doctor">Medical Doctor</option>
                                <option value="nurse">Nurse Practitioner</option>
                                <option value="physician_assistant">Physician Assistant</option>
                                <option value="cosmetic_surgeon">Cosmetic Surgeon</option>
                                <option value="dermatologist">Dermatologist</option>
                                <option value="aesthetician">Aesthetician</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Professional Bio:</label>
                        <textarea name="bio" placeholder="Tell us about your background, experience, and what drives your passion for aesthetic medicine..." rows="4"><%= (user.professionalProfile && user.professionalProfile.bio) ? user.professionalProfile.bio : '' %></textarea>
                        <div style="font-size: 0.9rem; color: #6c757d; margin-top: 5px;">
                            This will be visible to other professionals in the community
                        </div>
                    </div>
                </div>

                <!-- Specializations -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-star"></i>
                        Areas of Specialization
                    </div>

                    <div class="form-group">
                        <label>Your Specializations:</label>
                        <div class="specialization-tags" id="specializationTags">
                            <!-- Tags will be populated by JavaScript -->
                        </div>
                        <div class="add-specialization">
                            <input type="text" id="newSpecialization" placeholder="e.g., Botox, Dermal Fillers, Laser Treatments">
                            <button type="button" class="btn btn-sm" onclick="addSpecialization()">
                                <i class="fas fa-plus"></i> Add
                            </button>
                        </div>
                        <input type="hidden" name="specializations" id="specializationsInput" value="<%= (user.professionalProfile && user.professionalProfile.specializations) ? user.professionalProfile.specializations.join(',') : '' %>">
                    </div>

                    <div class="portfolio-section">
                        <div class="portfolio-title">
                            <i class="fas fa-trophy"></i> Professional Achievements
                        </div>
                        
                        <div class="achievement-item">
                            <div class="achievement-icon">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="achievement-details">
                                <div class="achievement-title">IAAI Certified Professional</div>
                                <div class="achievement-description">Complete 3 more courses to earn this certification</div>
                            </div>
                        </div>

                        <div class="achievement-item">
                            <div class="achievement-icon">
                                <i class="fas fa-award"></i>
                            </div>
                            <div class="achievement-details">
                                <div class="achievement-title">Advanced Practitioner</div>
                                <div class="achievement-description">Unlock with 5+ years experience and 10+ completed courses</div>
                            </div>
                        </div>

                        <div class="achievement-item">
                            <div class="achievement-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="achievement-details">
                                <div class="achievement-title">Community Contributor</div>
                                <div class="achievement-description">Share knowledge and help other practitioners</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Online Presence -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-globe"></i>
                        Online Presence
                    </div>

                    <div class="form-row">
                        <div>
                            <label>Professional Website:</label>
                            <input type="url" name="website" value="<%= (user.professionalProfile && user.professionalProfile.website) ? user.professionalProfile.website : '' %>" placeholder="https://yourpractice.com">
                        </div>
                        <div>
                            <label>LinkedIn Profile:</label>
                            <input type="url" name="linkedIn" value="<%= (user.professionalProfile && user.professionalProfile.linkedIn) ? user.professionalProfile.linkedIn : '' %>" placeholder="https://linkedin.com/in/yourprofile">
                        </div>
                    </div>

                    <div class="form-row">
                        <div>
                            <label>Instagram (Professional):</label>
                            <input type="text" name="instagram" value="<%= (user.professionalProfile && user.professionalProfile.instagram) ? user.professionalProfile.instagram : '' %>" placeholder="@yourpractice">
                        </div>
                        <div>
                            <label>Other Social Media:</label>
                            <input type="text" name="otherSocial" value="<%= (user.professionalProfile && user.professionalProfile.otherSocial) ? user.professionalProfile.otherSocial : '' %>" placeholder="TikTok, YouTube, etc.">
                        </div>
                    </div>
                </div>

                <!-- Practice Information -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-clinic-medical"></i>
                        Practice Information
                    </div>

                    <div class="form-row">
                        <div>
                            <label>Practice Type:</label>
                            <select name="practiceType">
                                <option value="">Select practice type</option>
                                <option value="private_clinic">Private Clinic</option>
                                <option value="medical_spa">Medical Spa</option>
                                <option value="hospital">Hospital</option>
                                <option value="aesthetic_center">Aesthetic Center</option>
                                <option value="mobile_practice">Mobile Practice</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div>
                            <label>Number of Staff:</label>
                            <select name="staffCount">
                                <option value="">Select staff count</option>
                                <option value="solo">Solo Practitioner</option>
                                <option value="2-5">2-5 Staff Members</option>
                                <option value="6-15">6-15 Staff Members</option>
                                <option value="16-50">16-50 Staff Members</option>
                                <option value="50+">50+ Staff Members</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Services Offered:</label>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px; margin-top: 15px;">
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="botox" style="margin-right: 10px;">
                                <i class="fas fa-syringe" style="margin-right: 5px; color: #fd7e14;"></i> Botox
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="fillers" style="margin-right: 10px;">
                                <i class="fas fa-hand-holding-medical" style="margin-right: 5px; color: #fd7e14;"></i> Dermal Fillers
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="laser" style="margin-right: 10px;">
                                <i class="fas fa-magic" style="margin-right: 5px; color: #fd7e14;"></i> Laser Treatments
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="skincare" style="margin-right: 10px;">
                                <i class="fas fa-hand-sparkles" style="margin-right: 5px; color: #fd7e14;"></i> Skincare
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="surgical" style="margin-right: 10px;">
                                <i class="fas fa-cut" style="margin-right: 5px; color: #fd7e14;"></i> Surgical Procedures
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="services" value="wellness" style="margin-right: 10px;">
                                <i class="fas fa-leaf" style="margin-right: 5px; color: #fd7e14;"></i> Wellness & IV Therapy
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Certifications & Training -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-certificate"></i>
                        Certifications & Training
                    </div>

                    <div class="form-group">
                        <label>Medical Degree/Education:</label>
                        <textarea name="education" placeholder="Medical school, residency, fellowships..." rows="3"><%= (user.professionalProfile && user.professionalProfile.education) ? user.professionalProfile.education : '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label>Board Certifications:</label>
                        <textarea name="certifications" placeholder="Board certifications, aesthetic training certificates..." rows="3"><%= (user.professionalProfile && user.professionalProfile.certifications) ? user.professionalProfile.certifications : '' %></textarea>
                    </div>

                    <div class="professional-card">
                        <div class="card-title">🎓 IAAI Training Progress</div>
                        <div class="card-content">
                            <p><strong>Completed Courses:</strong> 3 of 15 available courses</p>
                            <p><strong>Current Certifications:</strong> None</p>
                            <p><strong>Next Milestone:</strong> Complete 2 more courses to earn "Foundation Certificate"</p>
                        </div>
                    </div>
                </div>

                <!-- Professional Goals -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-bullseye"></i>
                        Professional Goals & Interests
                    </div>

                    <div class="form-group">
                        <label>Career Goals:</label>
                        <textarea name="careerGoals" placeholder="What are your professional aspirations? What skills do you want to develop?" rows="3"><%= (user.professionalProfile && user.professionalProfile.careerGoals) ? user.professionalProfile.careerGoals : '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label>Learning Interests:</label>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px; margin-top: 15px;">
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="advanced_injectables" style="margin-right: 10px;">
                                Advanced Injectables
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="business_management" style="margin-right: 10px;">
                                Business Management
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="new_technologies" style="margin-right: 10px;">
                                New Technologies
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="research" style="margin-right: 10px;">
                                Research & Studies
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="teaching" style="margin-right: 10px;">
                                Teaching & Mentoring
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="interests" value="networking" style="margin-right: 10px;">
                                Professional Networking
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Privacy Settings -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-eye"></i>
                        Profile Visibility
                    </div>

                    <div class="form-group">
                        <label>Who can see your professional profile?</label>
                        <select name="profileVisibility">
                            <option value="private">Private (Only me)</option>
                            <option value="iaai_community" selected>IAAI Community Members</option>
                            <option value="verified_professionals">Verified Professionals Only</option>
                            <option value="public">Public (Everyone)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label style="display: flex; align-items: center; gap: 10px;">
                            <input type="checkbox" name="allowNetworking" checked>
                            Allow other professionals to contact me for networking
                        </label>
                    </div>

                    <div class="form-group">
                        <label style="display: flex; align-items: center; gap: 10px;">
                            <input type="checkbox" name="showInDirectory">
                            Include me in the IAAI Professional Directory
                        </label>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="settings-section">
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i> Save Professional Profile
                    </button>
                    
                    <button type="button" class="btn btn-secondary" style="margin-left: 10px;" onclick="previewProfile()">
                        <i class="fas fa-eye"></i> Preview Profile
                    </button>
                    
                    <button type="button" class="btn btn-secondary" style="margin-left: 10px;" onclick="requestVerification()">
                        <i class="fas fa-check-circle"></i> Request Verification
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Initialize specializations from user data
        let specializations = '<%= (user.professionalProfile && user.professionalProfile.specializations) ? user.professionalProfile.specializations.join(",") : "" %>'.split(',').filter(s => s.trim());
        
        // Display current specializations
        function displaySpecializations() {
            const container = document.getElementById('specializationTags');
            container.innerHTML = '';
            
            specializations.forEach((spec, index) => {
                if (spec.trim()) {
                    const tag = document.createElement('div');
                    tag.className = 'tag';
                    tag.innerHTML = `
                        ${spec.trim()}
                        <span class="remove" onclick="removeSpecialization(${index})">&times;</span>
                    `;
                    container.appendChild(tag);
                }
            });
            
            // Update hidden input
            document.getElementById('specializationsInput').value = specializations.filter(s => s.trim()).join(',');
        }

        // Add specialization
        function addSpecialization() {
            const input = document.getElementById('newSpecialization');
            const value = input.value.trim();
            
            if (value && !specializations.includes(value)) {
                specializations.push(value);
                input.value = '';
                displaySpecializations();
            }
        }

        // Remove specialization
        function removeSpecialization(index) {
            specializations.splice(index, 1);
            displaySpecializations();
        }

        // Handle Enter key in specialization input
        document.getElementById('newSpecialization').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addSpecialization();
            }
        });

        // Handle form submission
        document.getElementById('professionalForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            // Handle checkbox arrays
            const services = Array.from(document.querySelectorAll('input[name="services"]:checked')).map(cb => cb.value);
            const interests = Array.from(document.querySelectorAll('input[name="interests"]:checked')).map(cb => cb.value);
            
            data.services = services;
            data.interests = interests;
            data.specializations = specializations.filter(s => s.trim());

            try {
                const response = await fetch('/account/professional', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    showNotification(result.message, 'success');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('Error updating professional profile:', error);
                showNotification('Error updating professional profile', 'error');
            }
        });

        // Preview profile
        function previewProfile() {
            // Create a modal or new window to show profile preview
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
                background: rgba(0,0,0,0.8); z-index: 10000; display: flex; 
                align-items: center; justify-content: center;
            `;
            
            modal.innerHTML = `
                <div style="background: white; padding: 30px; border-radius: 10px; max-width: 600px; max-height: 80vh; overflow-y: auto;">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h2><i class="fas fa-user-circle"></i> Profile Preview</h2>
                        <button onclick="this.closest('.modal').remove()" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
                    </div>
                    <div style="text-align: center; margin-bottom: 20px;">
                        <div style="width: 80px; height: 80px; background: #fd7e14; border-radius: 50%; margin: 0 auto 15px; display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3>${document.querySelector('input[name="clinicName"]').value || 'Your Practice'}</h3>
                        <p style="color: #6c757d;">${document.querySelector('select[name="primaryRole"]').value || 'Healthcare Professional'}</p>
                    </div>
                    <div style="background: #f8f9fa; padding: 15px; border-radius: 8px;">
                        <strong>Bio:</strong><br>
                        ${document.querySelector('textarea[name="bio"]').value || 'No bio provided yet.'}
                    </div>
                    <p style="margin-top: 15px; font-size: 0.9rem; color: #6c757d;">
                        This is how your profile will appear to other IAAI community members.
                    </p>
                </div>
            `;
            
            modal.className = 'modal';
            document.body.appendChild(modal);
        }

        // Request verification
        async function requestVerification() {
            const confirmed = confirm(
                'To verify your professional credentials, you will need to provide:\n\n' +
                '• Copy of professional license\n' +
                '• Proof of current employment/practice\n' +
                '• Professional references\n\n' +
                'Would you like to proceed with the verification request?'
            );

            if (confirmed) {
                try {
                    const response = await fetch('/account/professional/verify', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const result = await response.json();
                    
                    if (result.success) {
                        showNotification('Verification request submitted! We will contact you within 2-3 business days.', 'success');
                    } else {
                        showNotification(result.message, 'error');
                    }
                } catch (error) {
                    console.error('Error requesting verification:', error);
                    showNotification('Error submitting verification request', 'error');
                }
            }
        }

        // Notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }

        // Initialize specializations display on page load
        document.addEventListener('DOMContentLoaded', function() {
            displaySpecializations();
        });
    </script>
