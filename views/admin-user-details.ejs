    // Add course to user
    async function addCourseToUser() {
        try {
            // Get available courses
            const response = await fetch(`/admin-users/<%= userDetails._id %>/courses/available`);
            const data = await response.json();
    
            if (!data.success) {
                Swal.fire('Error', data.message, 'error');
                return;
            }
    
            const courses = data.courses;
            if (courses.length === 0) {
                Swal.fire('Info', 'No available courses to add', 'info');
                return;
            }
    
            // Create options for course selection
            const courseOptions = {};
            let currentCategory = '';
            courses.forEach(course => {
                if (course.category !== currentCategory) {
                    courseOptions[`--- ${course.category} ---`] = course.category;
                    currentCategory = course.category;
                }
                courseOptions[course._id] = `${course.courseCode} - ${course.title} (€${course.price || 0})`;
            });
    
            const { value: selectedCourseId } = await Swal.fire({
                title: 'Add Course to User',
                input: 'select',
                inputOptions: courseOptions,
                inputPlaceholder: 'Select a course',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                inputValidator: (value) => {
                    if (!value || value.startsWith('---')) {
                        return 'Please select a course!';
                    }
                }
            });
    
            if (selectedCourseId) {
                const selectedCourse = courses.find(c => c._id === selectedCourseId);
                
                const addResponse = await fetch(`/admin-users/<%= userDetails._id %>/courses/add`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        courseId: selectedCourseId,
                        courseType: selectedCourse.courseType
                    })
                });
    
                const addData = await addResponse.json();
    
                if (addData.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Course Added',
                        text: addData.message,
                        timer: 2000
                    });
                    location.reload();
                } else {
                    Swal.fire('Error', addData.message, 'error');
                }
            }
        } catch (error) {
            Swal.fire('Error', 'Failed to add course', 'error');
        }
    }
    
    // View deleted courses (recycle bin)
    async function viewDeletedCourses() {
        try {
            const response = await fetch(`/admin-users/<%= userDetails._id %>/courses/deleted`);
            const data = await response.json();
    
            if (!data.success) {
                Swal.fire('Error', data.message, 'error');
                return;
            }
    
            const deletedCourses = data.deletedCourses;
            if (deletedCourses.length === 0) {
                Swal.fire('Info', 'No deleted courses found', 'info');
                return;
            }
    
            let html = '<div style="max-height: 400px; overflow-y: auto;">';
            deletedCourses.forEach(deleted => {
                const course = deleted.courseData;
                html += `
                    <div style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; margin-bottom: 15px; background: #f8f9fa;">
                        <div style="display: flex; justify-content: between; align-items: center;">
