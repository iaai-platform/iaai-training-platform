    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Tab Navigation
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active from all tabs
                document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
                
                // Add active to clicked tab
                this.classList.add('active');
                const tabId = this.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Remove Course
        async function removeCourse(userId, enrollmentId, courseType) {
            const result = await Swal.fire({
                title: 'Remove Course',
                text: 'Are you sure you want to remove this course from the user?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Yes, remove it'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/admin-users/${userId}/courses/${enrollmentId}/${courseType}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ reason: 'Removed by admin' })
                    });

                    const data = await response.json();
                    
                    if (data.success) {
                        await Swal.fire('Removed!', 'Course has been removed.', 'success');
                        location.reload();
                    } else {
                        throw new Error(data.message);
                    }
                } catch (error) {
                    Swal.fire('Error', error.message || 'Failed to remove course', 'error');
                }
            }
        }

        // Edit User (placeholder)
        function editUser(userId) {
            // Implement edit functionality or redirect to edit page
            window.location.href = `/admin-users/${userId}/edit`;
        }
    </script>
