    }
    
    .credential-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      background: linear-gradient(135deg, #f0f7ff 0%, #e8f4ff 100%);
      border: 1px solid #002147;
      border-radius: 25px;
