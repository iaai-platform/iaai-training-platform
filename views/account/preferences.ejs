<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning Preferences - IAAI</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        .settings-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
        }
        .settings-header {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            padding: 30px;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }
        .settings-content {
            background: white;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .settings-section {
            padding: 30px;
            border-bottom: 1px solid #e9ecef;
        }
        .settings-section:last-child {
            border-bottom: none;
        }
        .section-title {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            color: #333;
            font-size: 1.3rem;
            font-weight: 600;
        }
        .preference-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid #17a2b8;
        }
        .preference-details {
            flex: 1;
        }
        .preference-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        .preference-description {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }
        select, input[type="range"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            background: white;
        }
        select:focus {
            outline: none;
            border-color: #17a2b8;
            box-shadow: 0 0 0 2px rgba(23,162,184,0.25);
        }
        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
        }
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 30px;
        }
        .slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .slider {
            background-color: #17a2b8;
        }
        input:checked + .slider:before {
            transform: translateX(30px);
        }
        .radio-group {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        .radio-option {
            display: flex;
            align-items: center;
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.3s;
            flex: 1;
            min-width: 120px;
        }
        .radio-option:hover {
            border-color: #17a2b8;
        }
        .radio-option.selected {
            border-color: #17a2b8;
            background: #e8f6f8;
        }
        .speed-indicator {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 0.9rem;
            color: #6c757d;
        }
        .quality-preview {
            display: flex;
            gap: 20px;
            margin-top: 15px;
        }
        .quality-option {
            text-align: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.3s;
            flex: 1;
        }
        .quality-option:hover, .quality-option.selected {
            border-color: #17a2b8;
            background: #e8f6f8;
        }
        .quality-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #17a2b8;
        }
        .btn {
            background: #17a2b8;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s;
        }
        .btn:hover {
            background: #138496;
        }
        .btn-secondary {
            background: #6c757d;
        }
        .btn-secondary:hover {
            background: #545b62;
        }
        .accessibility-options {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }
        .accessibility-title {
            color: #856404;
            font-weight: 600;
            margin-bottom: 15px;
        }
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            z-index: 1000;
            animation: slideIn 0.3s ease-out;
        }
        .notification.success { background-color: #28a745; }
        .notification.error { background-color: #dc3545; }
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

    <nav class="breadcrumb">
        <a href="/">Home</a> > 
        <a href="/dashboard">Dashboard</a> > 
        <span>Learning Preferences</span>
    </nav>

    <div class="settings-container">
        <div class="settings-header">
            <h1><i class="fas fa-sliders-h"></i> Learning Preferences</h1>
            <p>Customize your learning experience and course settings</p>
        </div>

        <div class="settings-content">
            <form id="preferencesForm">
                <!-- Learning Pace -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-tachometer-alt"></i>
                        Learning Pace
                    </div>

                    <div class="form-group">
                        <label>How fast do you prefer to learn?</label>
                        <div class="radio-group">
                            <label class="radio-option <%= (!user.learningPreferences || user.learningPreferences.pace === 'slow') ? 'selected' : '' %>">
                                <input type="radio" name="learningPace" value="slow" <%= (!user.learningPreferences || user.learningPreferences.pace === 'slow') ? 'checked' : '' %>>
                                <div>
                                    <div style="font-weight: 600;"><i class="fas fa-turtle"></i> Slow & Steady</div>
                                    <div style="font-size: 0.9rem; color: #6c757d;">Take your time</div>
                                </div>
                            </label>
                            
                            <label class="radio-option <%= (!user.learningPreferences || user.learningPreferences.pace === 'normal') ? 'selected' : '' %>">
                                <input type="radio" name="learningPace" value="normal" <%= (!user.learningPreferences || user.learningPreferences.pace === 'normal') ? 'checked' : '' %>>
                                <div>
                                    <div style="font-weight: 600;"><i class="fas fa-walking"></i> Normal</div>
                                    <div style="font-size: 0.9rem; color: #6c757d;">Balanced approach</div>
                                </div>
                            </label>
                            
                            <label class="radio-option <%= (user.learningPreferences && user.learningPreferences.pace === 'fast') ? 'selected' : '' %>">
                                <input type="radio" name="learningPace" value="fast" <%= (user.learningPreferences && user.learningPreferences.pace === 'fast') ? 'checked' : '' %>>
                                <div>
                                    <div style="font-weight: 600;"><i class="fas fa-running"></i> Fast Track</div>
                                    <div style="font-size: 0.9rem; color: #6c757d;">Accelerated learning</div>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Video Settings -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-video"></i>
                        Video Settings
                    </div>

                    <div class="form-group">
                        <label>Default Video Quality:</label>
                        <div class="quality-preview">
                            <div class="quality-option <%= (!user.learningPreferences || user.learningPreferences.videoQuality === 'auto') ? 'selected' : '' %>" onclick="selectQuality('auto')">
                                <div class="quality-icon"><i class="fas fa-magic"></i></div>
                                <div style="font-weight: 600;">Auto</div>
                                <div style="font-size: 0.8rem; color: #6c757d;">Best for your connection</div>
                            </div>
                            
                            <div class="quality-option <%= (user.learningPreferences && user.learningPreferences.videoQuality === '720p') ? 'selected' : '' %>" onclick="selectQuality('720p')">
                                <div class="quality-icon"><i class="fas fa-tv"></i></div>
                                <div style="font-weight: 600;">720p HD</div>
                                <div style="font-size: 0.8rem; color: #6c757d;">Standard quality</div>
                            </div>
                            
                            <div class="quality-option <%= (user.learningPreferences && user.learningPreferences.videoQuality === '1080p') ? 'selected' : '' %>" onclick="selectQuality('1080p')">
                                <div class="quality-icon"><i class="fas fa-desktop"></i></div>
                                <div style="font-weight: 600;">1080p Full HD</div>
                                <div style="font-size: 0.8rem; color: #6c757d;">High quality</div>
                            </div>
                        </div>
                        <input type="hidden" name="videoQuality" value="<%= (user.learningPreferences && user.learningPreferences.videoQuality) ? user.learningPreferences.videoQuality : 'auto' %>">
                    </div>

                    <div class="preference-item">
                        <div class="preference-details">
                            <div class="preference-title">Auto-play Next Video</div>
                            <div class="preference-description">
                                Automatically start the next video when current one ends
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="autoPlay" <%= (!user.learningPreferences || user.learningPreferences.autoPlay) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div class="preference-item">
                        <div class="preference-details">
                            <div class="preference-title">Show Subtitles</div>
                            <div class="preference-description">
                                Display subtitles for all videos by default
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="subtitles" <%= (user.learningPreferences && user.learningPreferences.subtitles) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <!-- Study Reminders -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-clock"></i>
                        Study Reminders
                    </div>

                    <div class="preference-item">
                        <div class="preference-details">
                            <div class="preference-title">Study Reminders</div>
                            <div class="preference-description">
                                Get reminded to continue your courses and maintain learning momentum
                            </div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" name="studyReminders" <%= (!user.learningPreferences || user.learningPreferences.studyReminders) ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div class="form-group" id="reminderSettings" style="<%= (!user.learningPreferences || user.learningPreferences.studyReminders) ? '' : 'display: none;' %>">
                        <label>Reminder Frequency:</label>
                        <select name="reminderFrequency">
                            <option value="daily">Daily</option>
                            <option value="every2days" selected>Every 2 days</option>
                            <option value="weekly">Weekly</option>
                        </select>
                    </div>
                </div>

                <!-- Language Settings -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-globe"></i>
                        Language Settings
                    </div>

                    <div class="form-group">
                        <label>Preferred Language:</label>
                        <select name="preferredLanguage">
                            <option value="en" <%= (!user.learningPreferences || user.learningPreferences.language === 'en') ? 'selected' : '' %>>English</option>
                            <option value="es" <%= (user.learningPreferences && user.learningPreferences.language === 'es') ? 'selected' : '' %>>Español</option>
                            <option value="fr" <%= (user.learningPreferences && user.learningPreferences.language === 'fr') ? 'selected' : '' %>>Français</option>
                            <option value="de" <%= (user.learningPreferences && user.learningPreferences.language === 'de') ? 'selected' : '' %>>Deutsch</option>
                            <option value="pt" <%= (user.learningPreferences && user.learningPreferences.language === 'pt') ? 'selected' : '' %>>Português</option>
                        </select>
                    </div>
                </div>

                <!-- Accessibility Options -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-universal-access"></i>
                        Accessibility Options
                    </div>

                    <div class="accessibility-options">
                        <div class="accessibility-title">
                            <i class="fas fa-eye"></i> Visual Accessibility
                        </div>

                        <div class="form-group">
                            <label>Text Size:</label>
                            <input type="range" name="textSize" min="12" max="20" value="16" oninput="updateTextSize(this.value)">
                            <div class="speed-indicator">
                                <span>Small</span>
                                <span id="textSizeValue">16px</span>
                                <span>Large</span>
                            </div>
                        </div>

                        <div class="preference-item">
                            <div class="preference-details">
                                <div class="preference-title">High Contrast Mode</div>
                                <div class="preference-description">
                                    Increase contrast for better visibility
                                </div>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" name="highContrast">
                                <span class="slider"></span>
                            </label>
                        </div>

                        <div class="preference-item">
                            <div class="preference-details">
                                <div class="preference-title">Reduce Motion</div>
                                <div class="preference-description">
                                    Minimize animations and transitions
                                </div>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" name="reduceMotion">
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Course Categories -->
                <div class="settings-section">
                    <div class="section-title">
                        <i class="fas fa-tags"></i>
                        Course Categories
                    </div>

                    <div class="form-group">
                        <label>Preferred Course Categories (Select multiple):</label>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px; margin-top: 15px;">
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="categories" value="injectables" style="margin-right: 10px;">
                                <i class="fas fa-syringe" style="margin-right: 5px; color: #17a2b8;"></i> Injectables
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="categories" value="skincare" style="margin-right: 10px;">
                                <i class="fas fa-hand-sparkles" style="margin-right: 5px; color: #17a2b8;"></i> Skincare
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="categories" value="laser" style="margin-right: 10px;">
                                <i class="fas fa-magic" style="margin-right: 5px; color: #17a2b8;"></i> Laser Treatments
                            </label>
                            <label style="display: flex; align-items: center; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                                <input type="checkbox" name="categories" value="business" style="margin-right: 10px;">
                                <i class="fas fa-briefcase" style="margin-right: 5px; color: #17a2b8;"></i> Business Skills
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="settings-section">
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i> Save Learning Preferences
                    </button>
                    
                    <button type="button" class="btn btn-secondary" style="margin-left: 10px;" onclick="resetToDefaults()">
                        <i class="fas fa-undo"></i> Reset to Defaults
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Handle radio button selection styling
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove selected class from all options in this group
                document.querySelectorAll(`input[name="${this.name}"]`).forEach(r => {
                    r.closest('.radio-option').classList.remove('selected');
                });
                // Add selected class to chosen option
                this.closest('.radio-option').classList.add('selected');
            });
        });

        // Video quality selection
        function selectQuality(quality) {
            document.querySelectorAll('.quality-option').forEach(option => {
                option.classList.remove('selected');
            });
            event.target.closest('.quality-option').classList.add('selected');
            document.querySelector('input[name="videoQuality"]').value = quality;
        }

        // Text size slider
        function updateTextSize(value) {
            document.getElementById('textSizeValue').textContent = value + 'px';
        }

        // Study reminders toggle
        document.querySelector('input[name="studyReminders"]').addEventListener('change', function() {
            const reminderSettings = document.getElementById('reminderSettings');
            if (this.checked) {
                reminderSettings.style.display = 'block';
            } else {
                reminderSettings.style.display = 'none';
            }
        });

        // Handle form submission
        document.getElementById('preferencesForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            // Handle checkbox arrays
            const categories = Array.from(document.querySelectorAll('input[name="categories"]:checked')).map(cb => cb.value);
            data.categories = categories;

            try {
                const response = await fetch('/account/preferences', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    showNotification(result.message, 'success');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('Error updating preferences:', error);
                showNotification('Error updating learning preferences', 'error');
            }
        });

        // Reset to defaults
        function resetToDefaults() {
            if (confirm('Are you sure you want to reset all preferences to defaults?')) {
                // Reset form to default values
                document.getElementById('preferencesForm').reset();
                
                // Reset custom selections
                document.querySelectorAll('.radio-option').forEach(option => {
                    option.classList.remove('selected');
                });
                document.querySelectorAll('.quality-option').forEach(option => {
                    option.classList.remove('selected');
                });
                
                // Set defaults
                document.querySelector('input[name="learningPace"][value="normal"]').closest('.radio-option').classList.add('selected');
                document.querySelector('.quality-option').classList.add('selected');
                document.querySelector('input[name="videoQuality"]').value = 'auto';
                document.getElementById('textSizeValue').textContent = '16px';
                
                showNotification('Preferences reset to defaults', 'success');
            }
        }

        // Notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }
    </script>
</body>
</html>