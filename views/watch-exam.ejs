    function toggleFullscreen() {
      if (!document.fullscreenElement && videoPlayer) {
        videoPlayer.requestFullscreen().catch(err => {
          console.error('Error attempting to enable fullscreen:', err);
        });
      } else {
        document.exitFullscreen();
      }
