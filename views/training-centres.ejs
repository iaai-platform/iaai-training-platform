            font-weight: 700;
            margin-bottom: 15px;
            color: #002147;
        }

        .facility-card p {
            font-size: 16px;
            line-height: 1.6;
            color: #666;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #ffcc00, #b8860b);
            padding: 80px 0;
            text-align: center;
        }

        .cta-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .cta-section h2 {
            font-size: 42px;
            font-weight: 700;
            color: #002147;
            margin-bottom: 20px;
        }

        .cta-section p {
            font-size: 18px;
            color: #333;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .cta-btn {
            background: #002147;
            color: #ffffff;
            padding: 15px 35px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0, 33, 71, 0.3);
        }

        .cta-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 33, 71, 0.5);
            background: #001a3a;
        }

        .cta-btn.secondary {
            background: transparent;
            border: 2px solid #002147;
            color: #002147;
        }

        .cta-btn.secondary:hover {
            background: #002147;
            color: #ffffff;
